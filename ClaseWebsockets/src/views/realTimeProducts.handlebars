{{#each products}}
<div class="product-container">
    <div class="product-card">
        <img src="{{thumbnails}}" alt="{{title}} Thumbnail">
        <div class="product-details">
            <h3>{{title}}</h3>
            <p>{{description}}</p>
            <p>Code: {{code}}</p>
            <p>Price: ${{price}}</p>
            <p>Stock: {{stock}}</p>
            <p>Category: {{category}}</p>
        </div>
    </div>
</div>
{{/each}}

<form id="createProductForm" class="form-container">
    <label for="productTitle">Titulo:</label>
    <input type="text" id="productTitle" name="productTitle" required>

    <label for="productDescription">Descripci√≥n:</label>
    <textarea id="productDescription" name="productDescription" required></textarea>

    <label for="productCode">Codigo:</label>
    <input type="text" id="productCode" name="productCode" required>

    <label for="productPrice">Precio:</label>
    <input type="number" id="productPrice" name="productPrice" required>

    <label for="productStock">Stock:</label>
    <input type="number" id="productStock" name="productStock" required>

    <label for="productCategory">Categoria:</label>
    <input type="text" id="productCategory" name="productCategory" required>

    <label for="productImage">URL de la imagen:</label>
    <input type="url" id="productImage" name="productImage" required>

    <button type="submit">Crear Producto</button>
</form>


<form id="deleteProductForm" class="form-container">
    <label for="productId">ID del Producto a Eliminar:</label>
    <input type="text" id="productId" name="productId" required>

    <button type="submit">Eliminar Producto</button>
</form>

{{#if updatedProducts}}
<p>Los productos se actualizaron.</p>
{{/if}}